{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="w3-container" style="padding-top: 20px;">
    <h2>Dashboard</h2>
    <div class="w3-row-padding w3-margin-top">
        <!-- Widget for Number of Users -->
        <div class="w3-quarter">
            <div class="w3-card w3-padding w3-teal">
                <h3>Users</h3>
                <p>{{ numberOfUsers }}</p>
            </div>
        </div>
        <!-- Widget for Revenue -->
        <div class="w3-quarter">
            <div class="w3-card w3-padding w3-orange">
                <h3>Revenue</h3>
                <p>${{ revenue | number_format(2, '.', ',') }}</p>
            </div>
        </div>
        <!-- Widget for Tasks -->
        <div class="w3-quarter">
            <div class="w3-card w3-padding w3-red">
                <h3>Tasks</h3>
                <p>{{ tasks }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
