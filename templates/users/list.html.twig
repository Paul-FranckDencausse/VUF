{# templates/users/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <table>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Rôle</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.roles|join(', ') }}</td>  <!-- Affiche tous les rôles si c'est un tableau -->
            <td>{{ user.email }}</td>
            <td><a href="{{ path('user_profile', {'id': user.id}) }}">Voir Profil</a></td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
